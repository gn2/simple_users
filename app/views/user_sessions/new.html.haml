- page_title("Identification")
#login-form
  .form_holder
    - form_for @user_session, :url => user_session_path do |f|
      %div= f.error_messages :header_message => "Please try again!", :message => "We had some problems signing you in:"
  
      %p
        %span.label= f.label :login
        %span.input= f.text_field :login, :class => "text_field"

      %p
        %span.label= f.label :password
        %span.input= f.password_field :password, :class => "password_field"
  
      %p.remember
        %span
          = f.check_box :remember_me
          = f.label :remember_me
  
      %p.submit= f.submit "Send your credentials"